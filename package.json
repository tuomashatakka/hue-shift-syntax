{
  "name": "hue-shift-syntax",
  "theme": "syntax",
  "main": "./main.js",
  "version": "0.1.0",
  "description": "Configurable syntax engine/framework with a vivid configuration",
  "keywords": [
    "syntax",
    "theme",
    "hue",
    "custom",
    "configurable",
    "colorful"
  ],
  "repository": "https://github.com/tuomashatakka/hue-shift-syntax",
  "license": "MIT",
  "author": "Tuomas Hatakka",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "underscore": "^1.8.3"
  },
  "configSchema": {
    "main": {
      "title": "Main",
      "description": "",
      "type": "object",
      "properties": {
        "hue": {
          "title": "Hue",
          "description": "Overall hue for the syntax theme",
          "type": "number",
          "minimum": 0.1,
          "maximum": 360,
          "default": 180
        },
        "saturation": {
          "title": "Saturation",
          "description": "Vividness of the colors",
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "default": 70
        },
        "luminance": {
          "title": "Luminance",
          "description": "Brightness",
          "type": "number",
          "minimum": 30,
          "maximum": 100,
          "default": 70
        }
      }
    },
    "modifiers": {
      "title": "Modifiers",
      "description": "Palette modifiers",
      "type": "object",
      "properties": {
        "aberration": {
          "title": "Aberration",
          "description": "Complementary colors' shift from the primary color",
          "type": "number",
          "minimum": 0.1,
          "maximum": 120,
          "default": 30
        }
      }
    },
    "filter": {
      "title": "Filters",
      "description": "May cause a drop in performance",
      "type": "object",
      "properties": {
        "blending": {
          "title": "Blending",
          "description": "Coming Soonâ„¢",
          "type": "number",
          "minimum": 0.1,
          "maximum": 120,
          "default": 30
        },
        "contrast": {
          "title": "Contrast",
          "description": "Contrast filter",
          "type": "number",
          "minimum": 40,
          "maximum": 500,
          "default": 100
        },
        "brightness": {
          "title": "Brightness",
          "description": "Brightness filter",
          "type": "number",
          "minimum": 60,
          "maximum": 200,
          "default": 100
        }
      }
    }
  }
}
